<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>controller.InitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmployeeController</servlet-name>
        <servlet-class>controller.AddEmployeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveEmployeeController</servlet-name>
        <servlet-class>controller.RemoveEmployeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmDeleteController</servlet-name>
        <servlet-class>controller.ConfirmDeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEmployeeController</servlet-name>
        <servlet-class>controller.UpdateEmployeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmUpdateController</servlet-name>
        <servlet-class>controller.ConfirmUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployeeController</servlet-name>
        <url-pattern>/AddEmployeeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveEmployeeController</servlet-name>
        <url-pattern>/RemoveEmployeeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmDeleteController</servlet-name>
        <url-pattern>/ConfirmDeleteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateEmployeeController</servlet-name>
        <url-pattern>/UpdateEmployeeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmUpdateController</servlet-name>
        <url-pattern>/ConfirmUpdateController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
